<h2>create user</h2>

<%= form_for :user, :url => { controller: "employees", action: "create_access" } do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.hidden_field :employee_id, {value: params[:id]} %>
    <%= f.hidden_field :role_id, {value: 3} %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>